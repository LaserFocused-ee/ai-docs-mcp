{
  "mcpServers": {
    "ai-knowledge-hub": {
      "command": "npx",
      "args": ["ai-knowledge-hub"],
      "env": {
        "GURU_TOKEN": "your-username:your-user-token",
        "NOTION_TOKEN": "your-notion-integration-token",
        "NOTION_MCP_DATABASE_ID": "your-database-uuid"
      }
    },
    "ai-knowledge-hub-dev": {
      "command": "node",
      "args": ["/Users/yourusername/path/to/ai-knowledge-hub/dist/index.js"],
      "env": {
        "NODE_ENV": "development",
        "DEV_HOME": "/Users/yourusername/path/to/ai-knowledge-hub",
        "GURU_TOKEN": "your-username:your-user-token",
        "NOTION_TOKEN": "your-notion-integration-token",
        "NOTION_MCP_DATABASE_ID": "your-database-uuid"
      }
    }
  }
} 