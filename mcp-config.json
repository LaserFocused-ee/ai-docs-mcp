{
  "mcpServers": {
    "ai-docs": {
      "command": "node",
      "args": ["dist/index.js"],
      "env": {
        "NODE_ENV": "production",
        "GURU_TOKEN": "your_username:your_user_token"
      }
    },
    "ai-docs-dev": {
      "command": "npm",
      "args": ["run", "dev"],
      "env": {
        "NODE_ENV": "development",
        "DEBUG": "true",
        "GURU_TOKEN": "your_username:your_user_token"
      }
    }
  }
} 